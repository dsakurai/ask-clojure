{

    "recommendations": [
      "ms-azuretools.vscode-containers" // This line is possibly incorrect.
    ],

    // Tell Dev Containers (via Container Tools) which engine socket to use.
    // This is honored by Dev Containers when the "Container Tools" extension is installed.
    "containers.environment": {
      "DOCKER_HOST": "unix://${env:XDG_RUNTIME_DIR}/podman/podman.sock"
    },

    "python.analysis.exclude": [
        "${workspaceFolder}/nix-store",
        ".venv",
        ".git",
        "**/__pycache__"
    ]
}